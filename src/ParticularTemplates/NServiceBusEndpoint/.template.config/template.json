{
  "author": "Particular Software",
  "classifications": [
    "NServiceBus",
    "Cloud",
    "Console",
    "Service",
    "Aspire",
    "Web"
  ],
  "name": "NServiceBus Endpoint",
  "identity": "NServiceBus.Endpoint",
  "shortName": "nsbendpoint",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "preferNameDirectory": false,
  "sourceName": "ProjectName",
  "symbols": {
    "framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net9.0",
          "description": "Target net9.0"
        },
        {
          "choice": "net8.0",
          "description": "Target net8.0"
        }
      ],
      "replaces": "TARGET_FRAMEWORK",
      "defaultValue": "net9.0"
    },
    "transport": {
      "type": "parameter",
      "description": "The message queue (transport) to use.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "LearningTransport",
          "description": "Learning Transport (non-production)"
        },
        {
          "choice": "AzureServiceBus",
          "description": "Azure Service Bus"
        },
        {
          "choice": "AzureStorageQueues",
          "description": "Azure Storage Queues"
        },
        {
          "choice": "SQS",
          "description": "Amazon SQS"
        },
        {
          "choice": "RabbitMQ",
          "description": "RabbitMQ"
        },
        {
          "choice": "SQL",
          "description": "Microsoft SQL Server Transport"
        },
        {
          "choice": "PostgreSQL",
          "description": "PostgreSQL"
        }
      ],
      "defaultValue": "LearningTransport"
    },
    "persistence": {
      "type": "parameter",
      "description": "Where to store data. This should be the same as your business data.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "LearningPersistence",
          "description": "Learning Persistence (non-production)"
        },
        {
          "choice": "MSSQL",
          "description": "Microsoft SQL Server (using SQL Persistence)"
        },
        {
          "choice": "MySQL",
          "description": "MySQL (using SQL Persistence)"
        },
        {
          "choice": "PostgreSQL",
          "description": "PostgreSQL (using SQL Persistence)"
        },
        {
          "choice": "Oracle",
          "description": "Oracle (using SQL Persistence)"
        },
        {
          "choice": "CosmosDB",
          "description": "Azure Cosmos DB"
        },
        {
          "choice": "AzureTable",
          "description": "Azure Table Storage"
        },
        {
          "choice": "RavenDB",
          "description": "RavenDB"
        },
        {
          "choice": "MongoDB",
          "description": "MongoDB"
        },
        {
          "choice": "DynamoDB",
          "description": "Amazon DynamoDB"
        }
      ],
      "defaultValue": "LearningPersistence"
    },
    "hosting": {
      "type": "parameter",
      "description": "The hosting model to use.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "ConsoleApp",
          "description": "Console Application"
        },
        {
          "choice": "WindowsService",
          "description": "Windows Service"
        },
        {
          "choice": "Docker",
          "description": "Docker Container"
        },
        {
          "choice": "Aspire",
          "description": ".NET Aspire orchestration"
        }
      ],
      "defaultValue": "ConsoleApp"
    },
    "NeedsSqlClient": {
      "type": "computed",
      "value": "(transport != \"SQL\" && persistence == \"MSSQL\")"
    },
    "NeedsPostgreSql": {
      "type": "computed",
      "value": "(transport != \"PostgreSQL\" && persistence == \"PostgreSQL\")"
    },
    "UsesSqlPersistence": {
      "type": "computed",
      "value": "(persistence == \"MSSQL\" || persistence == \"MySQL\" || persistence == \"PostgreSQL\" || persistence == \"Oracle\")"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(hosting != 'Docker')",
          "exclude": [
            "license.xml"
          ]
        },
        {
          "condition": "(hosting != 'Aspire')",
          "exclude": [
            "AspireServiceDefaults/**",
            "AspireAppHost/**"
          ]
        },
        {
          "condition": "(hosting == 'Aspire')",
          "exclude": [],
          "rename": {}
       }
      ]
    }
  ],
  "primaryOutputs": [
    {
      "path": "ProjectName.csproj"
    },
    {
      "path": "/AspireServiceDefaults/AspireServiceDefaults.csproj",
      "condition": "(hosting == \"Aspire\")"
    },
    {
      "path": "/AspireAppHost/AspireAppHost.csproj",
      "condition": "(hosting == \"Aspire\")"
    }
  ],
  "postActions": [
    {
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    },
    {
      "description": "Create a solution and add all projects.",
      "manualInstructions": [],
      "actionId": "196092FF-F1BD-4E08-914A-BAF0BD4A3376",
      "args": {
        "executable": "cmd",
        "args": [
          "/c",
           "dotnet new sln -n \"%SAFE_PROJECT_NAME%\" && dotnet sln \"%SAFE_PROJECT_NAME%.sln\" add \"Endpoint\\ProjectName.csproj\" AspireServiceDefaults\\AspireServiceDefaults.csproj AspireAppHost\\AspireAppHost.csproj"
        ]
      },
      "continueOnError": true
    }
  ]
}
