<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net452</TargetFramework>
    <Description>dotnet new templates targeting Particular tools and libraries</Description>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <PackageType>Template</PackageType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Particular.Packaging" Version="0.1.0" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\Templates\**\*" Exclude="**\bin\**\*;**\obj\**\*;**\*.DotSettings" Pack="true" PackagePath="content" />
    <None Remove="..\Templates\DockerEndpoint\.DS_Store" />
    <None Include="..\Templates\DockerEndpoint\DockerFile" Exclude="" Pack="true" PackagePath="content\DockerEndpoint\" />
  </ItemGroup>
</Project>